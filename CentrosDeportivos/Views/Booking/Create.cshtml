@model IEnumerable<CentrosDeportivos.SportCenterService.SportCenter>
@{
    ViewBag.Title = "Realizar reserva";
}
@Styles.Render("~/Content/booking.css")
<h2>Realizar reserva</h2>
<p>Seleccione el centro, deporte y hora, para realizar su reservas</p>
<div class="booking-container">
    <div class="form-group">
        <label>Centro Deportivo</label>
        <select class="form-control" id="centers">
            <option>Seleccione el centro</option>
            @foreach (var center in Model)
            {
                <option value="@center.id">@center.name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Deporte</label>
        <select class="form-control" id="sports">
            <option>Seleccione el deporte</option>
        </select>
    </div>
    <div class="form-group booking-date-container">
        <label class="booking-date-label">Fecha de la reserva</label>
        <input type="date" class="form-control booking-date" />
        <select class="form-control booking-time">
            <option>Seleccione la hora</option>
            <option>9:00-10:00</option>
            <option>10:00-11:00</option>
            <option>11:00-12:00</option>
            <option>12:00-13:00</option>
            <option>13:00-14:00</option>
            <option>14:00-15:00</option>
            <option>15:00-16:00</option>
            <option>16:00-17:00</option>
            <option>17:00-18:00</option>
            <option>18:00-19:00</option>
        </select>
    </div>
    <input type="button" id="mostrarpistas" class="btn btn-primary available-fields" value="Mostrar disponibilidad" />

    <div id="showfields">
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Booking.js")
}

